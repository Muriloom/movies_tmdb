<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.activity.RegistrarActivity">

    <ImageView
        android:id="@+id/registrar_imagem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:srcCompat="@drawable/ic_launcher_foreground"
        app:layout_constraintVertical_bias="0.3"
        />

    <EditText
        android:id="@+id/registrar_email"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/registrar_imagem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/campo_login"
        android:hint="Insira seu E-mail:"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/registrar_senha"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/registrar_email"
        app:layout_constraintStart_toStartOf="@id/registrar_email"
        app:layout_constraintEnd_toEndOf="@id/registrar_email"
        android:layout_marginTop="25dp"
        android:background="@drawable/campo_login"
        android:hint="Insira sua senha:"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registrar_botao_registrar"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:backgroundTint="@null"
        app:layout_constraintTop_toBottomOf="@id/registrar_senha"
        app:layout_constraintStart_toStartOf="@id/registrar_senha"
        app:layout_constraintEnd_toEndOf="@id/registrar_senha"
        android:layout_marginTop="25dp"
        android:background="@drawable/botao_login"
        android:text="Realizar Cadastro"
        android:textColor="@color/white"
        android:textSize="17dp"
        />

    <TextView
        android:id="@+id/registrar_retornar_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/registrar_botao_registrar"
        app:layout_constraintStart_toStartOf="@id/registrar_botao_registrar"
        app:layout_constraintEnd_toEndOf="@id/registrar_botao_registrar"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:text="Ja possui uma conta?"
        android:textColor="@color/white"
        android:textSize="16dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>